---
import Layout from "../layouts/Layout.astro";
import Skills from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
import Education from "../components/Education.astro";
import info from "../data/info.json";
import Contacts from "../components/Contacts.astro";
import Competitions from "../components/Competitions.astro";
import BlackLine from "../components/BlackLine.astro";
import Header from "../components/Header.astro";
---

<Layout title={info.common.title}>
  <Header />
  <main>
    <div class="flex justify-between">
      <div class="flex items-center">
        <h1 class="text-4xl mb-3 font-bold">
          {info.personal.name}
        </h1>
      </div>
      <Contacts />
    </div>
    <div class="max-w-4xl my-3">
      {info.personal.description}
    </div>
    <BlackLine />
    <Skills />
    <BlackLine />
    <Projects />
    <BlackLine />
    <Competitions />
    <BlackLine />
    <Education />
  </main>
</Layout>
