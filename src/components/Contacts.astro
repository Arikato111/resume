---
import info from "../data/info.json";
import type { Lang } from "../types/lang";
interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const msg = {
  email: {
    en: "email",
    th: "อีเมล",
  },
  website: {
    en: "Website",
    th: "เว็บไซต์",
  },
  phone: {
    en: "Phone",
    th: "เบอร์โทร",
  },
  line: {
    en: "Line ID",
    th: "ไอดีไลน์",
  },
};
---

<div class="contact-box text-center flex justify-between text-[16px]">
  <div>
    <span>Github:</span>
    <span>
      <a
        class="underline font-bold"
        href={`https://github.com/${info.personal.github}`}
        >{info.personal.github}</a
      >
    </span>
  </div>
  <div>
    <span>{msg.email[lang]}:</span>
    <a class="underline" href={`mailto:${info.personal.email}`}
      >{info.personal.email}</a
    >
  </div>
  <div>
    <span>{msg.website[lang]}:</span>
    <span>
      <a href={`https://${info.personal.website}`} class="underline"
        >{info.personal.website}</a
      >
    </span>
  </div>
  <div class="hidden" id="phone-block">
    <span>{msg.phone[lang]}:</span>
    <span id="phone-value"></span>
  </div>
  <div class="hidden" id="line-block">
    <span>{msg.line[lang]}:</span>
    <span id="line-value"></span>
  </div>
</div>

<script is:inline>
  function setLine(line) {
    const line_div = document.getElementById("line-block");
    const line_value = document.getElementById("line-value");

    line_div.classList.remove("hidden");
    line_value.innerText = line;
  }
  function setPhone(phone) {
    const phone_div = document.getElementById("phone-block");
    const phone_value = document.getElementById("phone-value");

    phone_div.classList.remove("hidden");
    phone_value.innerText = phone;
  }
  const urlSearchParams = new URLSearchParams(window.location.search);
  const params = Object.fromEntries(urlSearchParams.entries());
  if (params.phone) {
    console.log(params.phone);
    setPhone(params.phone);
  }
  if (params.line) {
    console.log(params.line);
    setLine(params.line);
  }
  if (params.print != undefined) {
    window.print();
  }
</script>

<style>
  a {
    text-decoration: none;
  }
</style>
